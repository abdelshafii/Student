@model StudentModel

@{ ViewData["Title"] = Model.frstNameArabic; }


<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        @*<img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail poster" alt="@Model.Title" />*@
        <a>
            <div class="poster" style="border-radius:20px;width:200px;background-image:url(data:image\/*;base64,@(Convert.ToBase64String(Model.imagurl)))">
            </div>
        </a>
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.frstNameArabic @Model.scndNameArabic</h3>
            <span class="mt-2">
                @Model.frstNameArabic @Model.scndNameArabic @Model.thrdNameArabic
                <i class="bi bi-person"></i>
                <span class="text-muted"></span>
            </span>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.fristNameEnglish @Model.scndNameEnglish</h3>
            <span class="mt-2">
                @Model.fristNameEnglish @Model.scndNameEnglish @Model.thrdNameEnglish
                <i class="bi bi-person"></i>
                <span class="text-muted"></span>
            </span>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <span class="text-muted">
                @Model.NationalCode
                <i class="bi bi-whatsapp"></i>
            </span>
            <span class="text-muted">
                @Model.nationality.Name
                <i class="bi bi-flag"></i>
            </span>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <span class="text-muted">
                @Model.Governorate.Name
                <i class="bi bi-whatsapp"></i>
            </span>
            <span class="text-muted">
                @Model.address
                <i class="bi bi-whatsapp"></i>
            </span>
            <span class="text-muted">
                @Model.city.Name
                <i class="bi bi-flag"></i>
            </span>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <span class="text-muted">
                @Model.qualification.Name
                <i class="bi bi-flag"></i>
            </span>
            <span class="text-muted">
                @Model.qualificationDegree.Name
                <i class="bi bi-flag"></i>
            </span>
            <span class="text-muted">
                @Model.percentage
                <i class="bi bi-flag"></i>
            </span>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <span class="text-danger">
                @Model.studentCode
                <i class="bi bi-qr-code"></i>
            </span>
            <span class="text-muted">
                @Model.Institute.Name
                <i class="bi bi-flag"></i>
            </span>
            <span class="text-muted">
                @Model.department.Name
                <i class="bi bi-flag"></i>
            </span>
        </div>
        <p class="text-justify mt-3"></p>
    </div>
    <div class="mt-3">
        <a style="border-radius:10px" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="bi bi-pencil"></i>
            Edit
        </a>

        <a style="border-radius:10px" asp-action="Index" class="btn btn-outline-info">
            <i class="bi bi-pencil"></i>
            Back To List
        </a>
    </div>
</div>
